<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <string-array name="tables">
        <item>vykladach</item>
        <item>posada</item>
    </string-array>


    <style name="textViewStyleQuery">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#04331c</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="textViewList">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#04331c</item>
        <item name="android:background">#dcdcdc</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="textViewListHeader" parent="textViewList">
        <item name="android:background">#b7b7b7</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0dp</item>


    </style>>

</resources>
